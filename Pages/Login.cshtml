@page
@model LoginModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
    
    <div align="center">
        
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            Username: <input class="input-field" style="width: 50%" asp-for="loginData.Username" placeholder="username" /><br/>
            Password: <input class="input-field" style="width: 50%" asp-for="loginData.Password" placeholder="password" /><br />
            Remember me: <input asp-for="loginData.RememberMe" type="checkbox" /><br />
            <input type="submit" value="Login" />
            @Html.AntiForgeryToken()
        </form>
        
    </div>
    
</div>