@page
@using MongoDB.Bson
@model AccountModel
@{
    ViewData["Title"] = "Account";
}

<!DOCTYPE html>

<html>
<head>
    <style type="text/css">
        
        .yeet {
          padding: 10px;
          border: 5px;
          background-color: #22a2d2;
          border-radius: 10px;
        }
        
        .yeet p { 
            font-size: large;
        }
        
    </style>
</head>
<body>


@{
    var data = this.Model.GetData();
        
    <h2>@data.AccountName</h2>
        
        
    <div class="yeet">You are @data.Age years old.</div>
}
    
</body>
</html>