            padding: 0;
            list-style: none;
            justify-content: center;
            display: flex;
        }
        
        .follow-status li {
            display: inline-block;
            margin-right: 30px;
            text-align: center;
        }
        
        .follow-status li:last-child {
            margin-right: 0;
        }
        
        .follow-status li span {
            display: block;
        }
        
        .other-stats {
            list-style: none;
            display: flex;
            padding: 0 15px;
        }
        
        .up-stats {
            width: 100%;
        }
        
        .up-image {
            text-align: center;
            position: relative;
            margin-bottom: 15px;
            margin-top: -95px;
        }
        
        .up-username {
            text-align: center;
        }
        
        .up-username h2 {
        	font-size: 1.5rem;
        	font-weight: bold;
        }
        
        .up-image img {
            border-radius: 999px;
            height: 150px;
            width: 150px;
        }
        
        .up-socials {
            float: left;
            width: 100%;
            text-align: left;
            padding: 0;
            font-size: 0.8rem;
        }
        
        .up-socials li {
            float: left;
            width: 100%;
            padding: 10px 15px;
            border-bottom: 1px solid #e5e5e5;
            font-weight: 700;
            
            list-style: none;
        }
        
        .user-post {
            float: left;
            width: 100%;
            border-right: 1px solid var(--container-colour-primary-border);
            border-bottom: 2px solid var(--container-colour-primary-border);
            padding: 15px;
            background-color: var(--container-colour-primary);
            border-radius: 5px;
        }
        
        .user-post-top {
            float: left;
            width: 100%;
            position: relative;
        }
        
        .user-post-content h3 {
            font-size: 17px;
            font-weight: 600;
            margin-bottom: 6px;
        }
        
        .user-post-content p {
            font-size: 11px;
            font-weight: 600;
            margin-bottom: 6px;
        }
        
        .user-post-top-details {
            display: inline-flex;
        }
        
        .user-post-top-details img {
            border-radius: 999px;
            height: 35px;
            width: 35px;
        }
        
        .user-post-top-details h3 {
            font-size: 12px;
            font-weight: 600;
            margin-bottom: 0;
        }
        
        .user-post-top-details span {
            font-size: 12px;
        }
        
        .user-description span {
