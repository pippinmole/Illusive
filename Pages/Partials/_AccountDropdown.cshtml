@using global::Illusive.Utility
@model ApplicationUser

@{
    var user = this.Model;
}

@if ( this.User.IsLoggedIn() ) {
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span style="display: inline-block; height: 25px; width: 25px; position: relative;">
                <img style="border-radius: 50px; width:100%; height:100%; right: 0; top: 0" src="@user?.ProfilePicture" alt=""/>
            </span>
            <span>@user?.UserName</span>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" asp-page="Account" asp-route-id="@user?.Id"><i class="fa fa-user"></i> My Profile</a>
            <a class="dropdown-item" asp-page="Logout"><i class="fa fa-sign-out"></i> Sign out</a>
        </div>
    </div>
} else {
    <a asp-page="./Login"><button class="btn btn-default">Sign in</button></a>
    <a asp-page="./Signup"><button class="btn btn-outline-dark">Sign Up</button></a>
}