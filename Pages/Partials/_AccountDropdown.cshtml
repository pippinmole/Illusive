@using global::Illusive.Utility
@model ApplicationUser

@{
    var user = this.Model;
}

@if ( this.User.IsLoggedIn() ) {
    <details class="account-dropdown-button details-animated noselect">
        <summary>
            <span style="display: inline-block; height: 25px; width: 25px; position: relative;">
                <img style="border-radius: 50px; width:100%; height:100%; right: 0; top: 0" src="@user?.ProfilePicture" alt=""/>
            </span>
            @user?.UserName
        </summary>
        <details-menu class="account-dropdown-details">
            <a asp-page="Account" asp-route-id="@user?.Id"><button class="button account-dropdown-elem" style="width: 100%;">My Profile</button></a>
            <a asp-page="Logout"><button class="button account-dropdown-elem" style="width: 100%;">Sign out</button></a>
        </details-menu>
    </details>
} else {
    <a asp-page="./Login"><button class="btn btn-default">Sign in</button></a>
    <a asp-page="./Signup"><button class="btn btn-outline-dark">Sign Up</button></a>
    
