@using global::Illusive.Utility
@model Models.AccountData

@{
    var user = this.Model;
}

@if ( this.User.IsLoggedIn() ) {
    <details class="account-dropdown-button details-animated noselect">
        <summary>
            <span style="display: inline-block; height: 25px; width: 25px; position: relative;">
                <img style="border-radius: 50px; width:100%; height:100%; right: 0; top: 0" src="@user?.ProfilePicture" alt=""/>
            </span>
            @user?.AccountName
        </summary>
        <details-menu class="account-dropdown-details">
            <a href="/Account"><button class="button account-dropdown-elem" style="width: 100%;">My Profile</button></a>
            <a href="/Logout"><button class="button account-dropdown-elem" style="width: 100%;">Sign out</button></a>
        </details-menu>
    </details>
} else {
    <details class="account-dropdown-button details-animated noselect">
        <summary>Signed out</summary>
        <details-menu class="account-dropdown-details">
            <a href="/Login"><button class="button account-dropdown-elem" style="width: 100%;">Sign in</button></a>
            <a href="/Signup"><button class="button account-dropdown-elem" style="width: 100%;">Sign up</button></a>
        </details-menu>
    </details>
}