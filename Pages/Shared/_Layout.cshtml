@using global::Illusive.Illusive.Authentication.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <title>@ViewData["Title"] - Illusive</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Illusive</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Forum">Forum</a>
                    </li>
                        
                    @if ( this.User.Identity.IsAuthenticated ) {
                        <div float="right">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Account">Account</a>
                        </div>
                    } else {
                        // Logged-out specific headings here
                    }
                </ul>
            </div>
            
            @if ( this.User.Identity.IsAuthenticated ) {
                <details class="account-dropdown-button details-animated noselect">
                    <summary>@this.User.Identity.Name</summary>
                    <details-menu class="account-dropdown-details">
                        <a href="/Account"><button class="account-dropdown-elem" style="width: 100%;">My Profile</button></a>
                        <a href="/Logout"><button class="account-dropdown-elem" style="width: 100%;">Sign out</button></a>
                    </details-menu>
                </details>
            } else {
                <details class="account-dropdown-button details-animated noselect">
                    <summary>Signed out</summary>
                    <details-menu class="account-dropdown-details">
                        <a href="/Login"><button class="account-dropdown-elem" style="width: 100%;">Sign in</button></a>
                        <a href="/Signup"><button class="account-dropdown-elem" style="width: 100%;">Sign up</button></a>
                    </details-menu>
                </details>
            }
            <br />
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2020 - pippin_mole - <a asp-area="" asp-page="/Privacy">Privacy</a>
        <div style="float: right">This website is <a href="https://github.com/pippinmole/Illusive" target="_blank">open source</a>!</div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
